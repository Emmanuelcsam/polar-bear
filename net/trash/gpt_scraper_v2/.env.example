# ChatGPT Analyzer Environment Variables
# Copy this file to .env and fill in your values

# ChatGPT Credentials (for live mode)
CHATGPT_EMAIL=your.email@example.com
CHATGPT_PASSWORD=your_password_here

# Chrome/Chromium Driver Path (optional - auto-detected if not set)
# For Chromium on Ubuntu: /usr/lib/chromium-browser/chromedriver
# CHROMEDRIVER_PATH=/path/to/chromedriver

# Default Paths
# EXPORT_FILE=conversations.json
# OUTPUT_DIR=chatgpt_analysis

# Analysis Options
# USE_CACHE=true
# DEBUG_MODE=false
# HEADLESS_MODE=true

# Report Formats (comma-separated: html,csv,json,markdown,pdf)
# DEFAULT_FORMATS=html

# Extraction Options
# AUTO_EXTRACT=false
# EXTRACT_CODE=true
# EXTRACT_RESEARCH=true

# Performance Settings
# MAX_WORKERS=8
# CHUNK_SIZE=50
# REQUEST_TIMEOUT=30

# CAPTCHA Settings
# CAPTCHA_MAX_ATTEMPTS=5
# CAPTCHA_TIMEOUT=30

# Proxy Settings (optional)
# HTTP_PROXY=http://proxy.example.com:8080
# HTTPS_PROXY=https://proxy.example.com:8080
# NO_PROXY=localhost,127.0.0.1

# API Keys (for future features)
# OPENAI_API_KEY=sk-...
# ANTHROPIC_API_KEY=sk-...

# Email Notification Settings (optional)
# Get notified when analysis completes
# SMTP_SERVER=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your.email@gmail.com
# SMTP_PASSWORD=your_app_password
# NOTIFY_EMAIL=recipient@example.com

# Advanced Settings
# LOG_LEVEL=INFO
# LOG_FILE=chatgpt_analyzer.log
# SCREENSHOT_ON_ERROR=true
# SAVE_DEBUG_HTML=false
